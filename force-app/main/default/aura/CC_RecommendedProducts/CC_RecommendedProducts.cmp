<aura:component implements="lightning:availableForFlowScreens,force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global" >
   
    
    <!--Attribute Declaration-->
    <aura:attribute name="isPPCheck" type="Boolean" /><!--Added by chandra dated 21/04/2022-->
    <aura:attribute name="isPPConfirmationCheck" type="Boolean" /><!--Added by chandra dated 21/04/2022-->
    <aura:attribute name="selectedValue" type="String" /><!--Added by chandra dated 21/04/2022-->
    <aura:attribute name="monthlyFee" type="Decimal" default="19.92" /><!--Added by chandra dated 21/04/2022-->
    
    
    <div class="slds-m-bottom_x-small"><b>Additional Recommended Product(s)</b></div>
    <c:ABSACreditProtectionPlan isPPCheck="{!v.isPPCheck}"
                                isPPConfirmationCheck="{!v.isPPConfirmationCheck}"
                                selectedValue="{!v.selectedValue}"
                                monthlyFee="{!v.monthlyFee}" />
    <c:BranchVasReward rewardSectionLabel="ABSA Rewards" />
</aura:component>