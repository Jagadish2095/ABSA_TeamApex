                                                                                {'label': 'No', 'value': 'N'}
                                                                                
                                                                                ]"/>
    <aura:attribute name="showSpinner" type="Boolean" default="false"/>
    <aura:attribute name="secondaryaccoptionGiven" type="String" default="N" />
    
