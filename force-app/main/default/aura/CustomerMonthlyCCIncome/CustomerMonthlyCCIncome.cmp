<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global" >
	
    <aura:attribute name="incomeInformation" type="Object" access="public" default="{}" />
    <aura:attribute name="ccApplicationDataMap" type="String" access="public" />

    <aura:method name="collectIncomeInformation" action="{!c.getInformation}"
        description="A method to collect the Contact Information">
    </aura:method>

    

        <lightning:layout multipleRows="true">
            <lightning:layoutItem padding="around-small" size="6">
                <div class="slds-form-element_readonly">
                    <lightning:input type="text" aura:id="grossIncome" value= "{!v.Total_Gross_Monthly_Income}" label = "Total Gross Monthly Income"/>
                </div>
                
            </lightning:layoutItem>
            <lightning:layoutItem padding="around-small" size="6">
                <div class="slds-form-element_readonly">
                    <!--lightning:input type="text" aura:id="netIncome" value= "{!v.Total_Net_Monthly_Income__c}" label = "Total Net Monthly Income"/-->
                    <lightning:input type="text" aura:id="netIncome" value= "{!v.Total_Net_Monthly_Income__c}" label = "Total Gross Monthly Income"/>
                </div>
            </lightning:layoutItem>
            <lightning:layoutItem padding="around-small" size="6">
                <div class="slds-form-element_readonly">
                    
                    <lightning:input type="text" aura:id="rentalIncome" value= "{!v.Rental_Income__c}" label = "Rental Income"/>
                </div>
            </lightning:layoutItem>
            <lightning:layoutItem padding="around-small" size="6">
                <div class="slds-form-element_readonly">
                    <lightning:input type="text" aura:id="additionalIncome" value= "{!v.Other_Additional_Income__c}" label = "Other Income"/>
                </div>
            </lightning:layoutItem>
            
        </lightning:layout>
    
</aura:component>