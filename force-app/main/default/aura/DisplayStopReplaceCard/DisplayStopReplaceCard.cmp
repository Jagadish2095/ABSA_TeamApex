<aura:component access="global"
                implements="lightning:availableForFlowScreens,force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction">
	
    <!--Attributes-->
    <aura:attribute type="object" name="cardDetails" default=""/>
    
    <div class="slds-size_5-of-6 ">
        <div class="slds-box slds-box_x-small slds-m-around_x-small filterStyle" style="color:white;">
            Card Holder Name
            <p>{!v.cardDetails.plasticCardHolderName}</p><br/>
            Card Number
            <p>{!v.cardDetails.plasticCardNumber}</p>
            
        </div>
    </div>
</aura:component>