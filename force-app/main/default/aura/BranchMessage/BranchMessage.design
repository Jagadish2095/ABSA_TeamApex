<design:component >
   <design:attribute name="iconName" label="Icon Name" description="The Lightning Design System name of the icon. Names are written in the format 'utility:down' where 'utility' is the category, and 'down' is the specific icon to be displayed." />
   <design:attribute name="iconSize" label="Icon Size" description="The size of the icon. Options include xx-small, x-small, small, medium, or large. This value defaults to medium." />
   <design:attribute name="iconVariant" label="Icon Variant" description="The variant changes the appearance of a utility icon. Accepted variants include inverse, warning and error. Use the inverse variant to implement a white fill in utility icons on dark backgrounds." />
   <design:attribute name="mediaBody" label="Media Body" description="Message to display" />
   <design:attribute name="mediaTheme" label="Media Theme" description="The theme of the Media Body. Options include slds-theme_info, slds-theme_success, slds-theme_warning, slds-theme_error, slds-scoped-notification_dark, or slds-scoped-notification_light. This value defaults to slds-scoped-notification_light." />
   <design:attribute name="mediaBodyClass" label="Media Body Class" description="Message to display class" />
</design:component>