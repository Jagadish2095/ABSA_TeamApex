<aura:component>
    <aura:attribute name="dataMap" type="String" default=""/>
    <aura:attribute name="decision" type="List" default=""/>

	<aura:attribute
		name="radioOptions"
		type="List"
		default="[{'label': 'Customer would like receive their eStatements via email.', 'value': 'email'},
				{'label': 'Customer would like to Post.', 'value': 'post'}]"
	    />

			<lightning:radioGroup
            aura:id="rgAttestation"
            label=""
            options="{! v.radioOptions }"
            value="{! v.decision }"
            onchange="{! c.onRadioChange }"
            type="radio"
        />
</aura:component>