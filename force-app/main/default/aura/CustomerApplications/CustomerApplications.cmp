<aura:component implements="flexipage:availableForAllPageTypes,force:hasRecordId" access="global" controller="CustomerApplicationsController">

    <aura:handler name="init" value="{!this}" action="{!c.fetchApplications}"/>

    <aura:attribute type="Object[]" name="applicationList"/>
    <aura:attribute name="applicationColumns" type="List"/>

    <lightning:card title="Paused Interviews">
        <lightning:datatable    data="{! v.applicationList }"
                                columns="{! v.applicationColumns }"
                                keyField="id"
                                hideCheckboxColumn="true"/>
    </lightning:card>
</aura:component>